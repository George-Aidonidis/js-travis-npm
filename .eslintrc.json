{
    "extends": "airbnb-base",
    "plugins": [
        "import"
    ],
    "root": true,
    "env": {
        "node": true,
        "es6": true,
        "mocha": true
    },
    "rules": {
        "no-console": "off",
        "strict": 0,
        "comma-dangle": 0,
        "indent": [
            2,
            2,
            {
                "SwitchCase": 1,
                "VariableDeclarator": 2
            }
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            2,
            "single"
        ],
        "semi": [
            "error",
            "always"
        ]
    }
}